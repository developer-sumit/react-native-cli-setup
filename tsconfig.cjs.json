{
  "extends": "./tsconfig.json", // Extend from base config
  "compilerOptions": {
    // Specifies that the output will use CommonJS module syntax
    "module": "CommonJS",
    // Directory where compiled JavaScript files will be placed
    "outDir": "./dist/cjs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
